<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NCrafts.App.Sessions.SessionDetailsView"
             xmlns:local="clr-namespace:NCrafts.App.Sessions;assembly=NCrafts.App">

  <ContentPage.Resources>
    <ResourceDictionary>
      <local:DatetimeConverter x:Key="DatetimeConverter"></local:DatetimeConverter>
      
    </ResourceDictionary>
  </ContentPage.Resources>
  
  <StackLayout>
    <Label Text="{Binding Session.Title}" />
    <Label Text="{Binding Session.Description}" />
    <Label Text="{Binding Session.Room}" />
    <Label Text="Try to format string!!!!!! ->" />
    <Label Text="{Binding Session.DateStart, Converter={StaticResource DatetimeConverter}, ConverterParameter=1}" />
  </StackLayout>
</ContentPage>