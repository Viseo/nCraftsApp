<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NCrafts.App.Sessions.SessionDetailsView"
             xmlns:converter="clr-namespace:NCrafts.App.Common.Converter;assembly=NCrafts.App"
             xmlns:resx="clr-namespace:NCrafts.App.Resx;assembly=NCrafts.App">

  <ContentPage.Resources>
    <ResourceDictionary>
      <converter:DatetimeConverter x:Key="DatetimeConverter"></converter:DatetimeConverter>
      <converter:TagListConverter x:Key="TagListConverter"></converter:TagListConverter>
      <converter:SpeakerListConverter x:Key="SpeakerListConverter"></converter:SpeakerListConverter>
    </ResourceDictionary>
  </ContentPage.Resources>
  
  <StackLayout Orientation="Vertical">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <Label Text="{Binding Session.Title}"
       VerticalOptions="Center"
       FontAttributes="Bold"
       FontSize="18"
       Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" />
      <Label Text="{Binding Session.Speakers, Converter={StaticResource SpeakerListConverter} }"
       VerticalOptions="Center"
       FontAttributes="Bold"
       FontSize="18"
       Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" />
      <Label Text="{Binding Session.Interval, Converter={StaticResource DatetimeConverter}, ConverterParameter={x:Static converter:DateConverterType.TextDate} }"
       VerticalOptions="Center"
       Grid.Row="2" Grid.Column="0"/>
      <Label Text="{Binding Session.Interval, Converter={StaticResource DatetimeConverter}, ConverterParameter={x:Static converter:DateConverterType.TextHours} }"
       VerticalOptions="Center"
       Grid.Row="3" Grid.Column="0"/>
      <Label Text="{Binding Session.Room, StringFormat='Room: {0:N}'}"
       VerticalOptions="Center"
       Grid.Row="4" Grid.Column="0"/>
      <Label Text="{Binding Session.Tags, Converter={StaticResource TagListConverter}}"
       VerticalOptions="Center"
       Grid.Row="2" Grid.Column="1" Grid.RowSpan="3" />

    </Grid>
    <StackLayout Orientation="Vertical">
      <Label Text="{x:Static resx:AppResources.Details}"
           FontAttributes="Bold"
           FontSize="18"/>
      <Label Text="{Binding Session.Description}" />
    </StackLayout>
  </StackLayout>
</ContentPage>