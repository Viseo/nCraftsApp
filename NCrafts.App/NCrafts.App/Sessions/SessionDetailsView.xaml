<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NCrafts.App.Sessions.SessionDetailsView"
             xmlns:converters="clr-namespace:NCrafts.App.Common.Converters;assembly=NCrafts.App"
             xmlns:resx="clr-namespace:NCrafts.App.Resx;assembly=NCrafts.App">

 
  <ContentPage.Resources>
    <ResourceDictionary>
      <converters:DatetimeConverter x:Key="DatetimeConverter"></converters:DatetimeConverter>
    </ResourceDictionary>
  </ContentPage.Resources>
  
  <StackLayout Padding="2,0,2,0" Orientation="Vertical">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="Auto" />
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="*" />
      </Grid.ColumnDefinitions>

      <Label Text="{Binding Session.Title}"
       VerticalOptions="Center"
       FontAttributes="Bold"
       FontSize="18"
       Grid.Row="0" Grid.Column="0" />
      <Label Text="{Binding Session.Speakers}"
       VerticalOptions="Center"
       FontAttributes="Bold"
       FontSize="18"
       Grid.Row="0" Grid.Column="1" />
      <StackLayout Padding="3,0,0,0" Orientation="Horizontal" Grid.Row="1" Grid.Column="0">
        <Image Source="clockicon" WidthRequest="18" />
        <StackLayout Orientation="Vertical">
          <Label Text="{Binding Session.Interval, Converter={StaticResource DatetimeConverter}, ConverterParameter={x:Static converters:DateTimeConvertion.TextDate} }"
       VerticalOptions="Center" />
          <Label Text="{Binding Session.Interval, Converter={StaticResource DatetimeConverter}, ConverterParameter={x:Static converters:DateTimeConvertion.TextHours} }"
       VerticalOptions="Center" />
        </StackLayout>
      </StackLayout>
      <StackLayout Padding="3,0,0,0" Orientation="Horizontal" Grid.Row="2" Grid.Column="0">
        <Image Source="mapicon" WidthRequest="18" />
        <Label Text="{Binding Session.Room, StringFormat='Room: {0:N}'}"
         VerticalOptions="Center" />
      </StackLayout>
      <Label Text="{Binding Session.Tags, StringFormat='Tags: {0:N}'}"
       VerticalOptions="Center"
       Grid.Row="1" Grid.Column="1" Grid.RowSpan="2" />

    </Grid>
    <StackLayout Orientation="Vertical" Padding="0,10,0,0">
      <Label Text="{x:Static resx:AppResources.Details}"
           FontAttributes="Bold"
           FontSize="18"/>
      <Label Text="{Binding Session.Description}" />
    </StackLayout>
  </StackLayout>
</ContentPage>