<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NCrafts.App.Speakers.SpeakersView">

  <StackLayout x:Name="root">
    <Label Text="{Binding Header}"></Label>
    <ListView ItemsSource="{Binding Speakers}" VerticalOptions="Fill" HorizontalOptions="Fill">
      <ListView.ItemTemplate>
        <DataTemplate>
          <ViewCell>
            <StackLayout Padding="7,0">
              <Label Text="{Binding Name}" />
            </StackLayout>
          </ViewCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </StackLayout>
</ContentPage>